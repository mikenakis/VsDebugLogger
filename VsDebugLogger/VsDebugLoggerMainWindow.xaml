<Window x:Class="VsDebugLogger.VsDebugLoggerMainWindow"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
		xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		mc:Ignorable="d"
		Title="VsDebugLogger" Height="450" Width="800"
		FontSize="14"
		Foreground="#BFC82A"
		Background="#3D2B2B">
	<Border BorderThickness="10">
		<DockPanel>
			<Border Name="EditBoxContainer">
				<TextBox Name="StatusText" TextWrapping="WrapWithOverflow" AcceptsReturn="True" IsReadOnly="True" Foreground="#BFC82A" Background="#2F2121"
						HorizontalScrollBarVisibility="Hidden" VerticalScrollBarVisibility="Auto"
						Width="{Binding ElementName=EditBoxContainer, Path=ActualWidth}"
						Height="{Binding ElementName=EditBoxContainer, Path=ActualHeight}" />
			</Border>
		</DockPanel>
	</Border>
</Window>
